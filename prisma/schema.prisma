generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String   @unique
  userName      String
  password  String

  cart  CartItem[]
}

model CartItem {
  id         String   @id @default(uuid()) @map("_id")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  product    Products @relation(fields: [productId], references: [id])
  productId  String
  quantity   Int
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model Stores{
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String  @unique
  address   String
  phone     String
  email     String
  website   String?
  logo      String?
  owner     String
  products  Products[]
}

model Products{
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  price     Float 
  image     String[]
  status    String
  category  String[]
  description String

  storeID   String
  store     Stores   @relation(fields: [storeID], references: [id])

  cart      CartItem[]
} 
